<!-- fragment_report_page.xml -->
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_reportpage"
    android:id="@+id/main">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:background="@drawable/stroke_cardview"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="14dp"
        card_view:cardCornerRadius="20dp"
        android:padding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/stroke_cardview">

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:background="@drawable/stroke_cardview"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="70dp">

                <TextView
                    android:id="@+id/tvmapView"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="Map View" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvPotholes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Potholes List" />

            <TextView
                android:id="@+id/tvDamageType"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Damage Type :"
                app:layout_constraintTop_toBottomOf="@id/tvPotholes"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/etDamageType"
                android:layout_width="180dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/tvDamageType"
                app:layout_constraintStart_toEndOf="@id/tvDamageType"
                app:layout_constraintBottom_toBottomOf="@id/tvDamageType" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Total :"
                app:layout_constraintTop_toBottomOf="@id/tvDamageType"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/etTotal"
                android:layout_width="180dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/tvTotal"
                app:layout_constraintStart_toEndOf="@id/tvTotal"
                app:layout_constraintBottom_toBottomOf="@id/tvTotal" />

            <TextView
                android:id="@+id/tvImage"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Image :"
                app:layout_constraintTop_toBottomOf="@id/tvTotal"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="120dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="@id/tvImage"
                app:layout_constraintStart_toEndOf="@id/tvImage"
                app:layout_constraintTop_toTopOf="@id/tvImage"
                app:layout_constraintVertical_bias="0.236" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Location :"
                app:layout_constraintTop_toBottomOf="@id/tvImage"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp" />

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="180dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@id/tvLocation"
                app:layout_constraintStart_toEndOf="@id/tvLocation"
                app:layout_constraintTop_toTopOf="@id/tvLocation"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvStatistic"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Road Statistics"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@+id/tvLocation"
                android:paddingTop="20dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvNumberRoad"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Number of RoDex Type :"
                app:layout_constraintTop_toBottomOf="@id/tvStatistic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/etNumberRoad"
                android:layout_width="120dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@id/tvNumberRoad"
                app:layout_constraintStart_toEndOf="@id/tvNumberRoad"
                app:layout_constraintTop_toTopOf="@id/tvNumberRoad"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvNumberType"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Number of Each Type RoDex :"
                app:layout_constraintTop_toBottomOf="@id/tvNumberRoad"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/etNumberType"
                android:layout_width="120dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@id/tvNumberType"
                app:layout_constraintStart_toEndOf="@id/tvNumberType"
                app:layout_constraintTop_toTopOf="@id/tvNumberType"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>
