<!-- fragment_report_page.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_reportpage"
    android:id="@+id/main"
    tools:context=".activity.ReportPageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@color/white">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/arrow_back_24">

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/anim_head"
        android:layout_marginTop="-25dp"
        android:layout_gravity="top|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/stroke_cardview"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:padding="10dp"
            card_view:cardCornerRadius="10dp"
            tools:ignore="MissingConstraints">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_cardview">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <FrameLayout
                        android:id="@+id/fragment_container_map"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp">

                        <TextView
                            android:id="@+id/tvmapView"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="Map View"
                            android:textSize="10dp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvInspector"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/inspector"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fragment_container_map" />

                    <EditText
                        android:id="@+id/etInspector"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/tvInspector"
                        app:layout_constraintStart_toEndOf="@id/tvInspector"
                        app:layout_constraintTop_toTopOf="@id/tvInspector" />

                    <TextView
                        android:id="@+id/tvRoadName"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="@string/road_name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvInspector" />

                    <EditText
                        android:id="@+id/etRoadName"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/tvRoadName"
                        app:layout_constraintStart_toEndOf="@id/tvRoadName"
                        app:layout_constraintTop_toTopOf="@id/tvRoadName" />

                    <TextView
                        android:id="@+id/tvRoadLength"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="@string/road_length"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvRoadName" />

                    <EditText
                        android:id="@+id/etRoadLength"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/tvRoadLength"
                        app:layout_constraintStart_toEndOf="@id/tvRoadLength"
                        app:layout_constraintTop_toTopOf="@id/tvRoadLength" />

                    <TextView
                        android:id="@+id/tvRoadSection"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="@string/road_section"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvRoadLength" />

                    <EditText
                        android:id="@+id/etRoadSection"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="@id/tvRoadSection"
                        app:layout_constraintStart_toEndOf="@id/tvRoadSection"
                        app:layout_constraintTop_toTopOf="@id/tvRoadSection"
                        app:layout_constraintVertical_bias="0.521" />

                    <TextView
                        android:id="@+id/tvRoadSurface"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="@string/road_surface"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvRoadSection" />

                    <Spinner
                        android:id="@+id/spRoadSurface"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/tvRoadSurface"
                        app:layout_constraintStart_toEndOf="@id/tvRoadSurface"
                        app:layout_constraintTop_toTopOf="@id/tvRoadSurface" />

                    <TextView
                        android:id="@+id/tvStatistic"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:text="Road Statistics"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/spRoadSurface" />

                    <TextView
                        android:id="@+id/tvNumberRoad"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Number of RoDex Type :"
                        app:layout_constraintTop_toBottomOf="@id/tvStatistic"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="5dp" />

                    <EditText
                        android:id="@+id/etNumberRoad"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        app:layout_constraintBottom_toBottomOf="@id/tvNumberRoad"
                        app:layout_constraintStart_toEndOf="@id/tvNumberRoad"
                        app:layout_constraintTop_toTopOf="@id/tvNumberRoad"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tvNumberType"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Number of Each Type RoDex :"
                        app:layout_constraintTop_toBottomOf="@id/tvNumberRoad"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp" />

                    <EditText
                        android:id="@+id/etNumberType"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        app:layout_constraintBottom_toBottomOf="@id/tvNumberType"
                        app:layout_constraintStart_toEndOf="@id/tvNumberType"
                        app:layout_constraintTop_toTopOf="@id/tvNumberType"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal2"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.1"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
