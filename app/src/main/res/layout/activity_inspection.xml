<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_inspection"
    android:id="@+id/main">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/arrow_back_24">
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/anim_head"
        android:layout_marginTop="-2dp"
        android:layout_gravity="top|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/stroke_cardview"
        android:padding="10dp"
        card_view:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stroke_cardview"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvInspector"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/inspector"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etInspector"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tvInspector"
                app:layout_constraintStart_toEndOf="@id/tvInspector"
                app:layout_constraintTop_toTopOf="@id/tvInspector" />

            <TextView
                android:id="@+id/tvRoadName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/road_name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvInspector" />

            <EditText
                android:id="@+id/etRoadName"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tvRoadName"
                app:layout_constraintStart_toEndOf="@id/tvRoadName"
                app:layout_constraintTop_toTopOf="@id/tvRoadName" />

            <TextView
                android:id="@+id/tvRoadLength"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/road_length"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRoadName" />

            <EditText
                android:id="@+id/etRoadLength"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tvRoadLength"
                app:layout_constraintStart_toEndOf="@id/tvRoadLength"
                app:layout_constraintTop_toTopOf="@id/tvRoadLength" />

            <TextView
                android:id="@+id/tvRoadSection"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/road_section"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRoadLength" />

            <EditText
                android:id="@+id/etRoadSection"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@id/tvRoadSection"
                app:layout_constraintStart_toEndOf="@id/tvRoadSection"
                app:layout_constraintTop_toTopOf="@id/tvRoadSection"
                app:layout_constraintVertical_bias="0.521" />

            <TextView
                android:id="@+id/tvRoadSurface"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/road_surface"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRoadSection"/>

            <Spinner
                android:id="@+id/spinnerRoadSurface"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tvRoadSurface"
                app:layout_constraintStart_toEndOf="@id/tvRoadSurface"
                app:layout_constraintTop_toTopOf="@id/tvRoadSurface" />



            <Button
                android:id="@+id/btnStart"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/green"
                android:text="@string/start_inspection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRoadSurface" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal2"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.1"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
